<h1>Burgers</h1>

<div>
  <h2>All the Burgers you want to eat</h2>

  <ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <p>{{this.id}}. {{this.burger_name}}</p>
    <button class="devourBurger" value={{this.id}}>Devour</button>
    {{/unless}}
    {{/each}}
  </ul>

</div>
<h2>All the Burgers you have devoured:</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  <p>{{this.id}}. {{this.burger_name}}</p>
  {{/if}}
  {{/each}}
</ul>


<h2>Create a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>


    {{!-- <input type="radio" name="devour" value="1" checked> Eat Now!<br>
    <input type="radio" name="devour" value="0"> Devour Later! --}}

  </div>

  <button type="submit">Add Burger</button>
</form>